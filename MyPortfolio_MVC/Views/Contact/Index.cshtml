@model List<MyPortfolio_MVC.Models.TblContact>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<h2>Contact</h2>

<table class="table table-bordered table-active">

    <thead>
        <tr>
            <th>#</th>
            <th>Phone</th>
            <th>Email</th>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model)

        {
            count++;

            <tr>
                <td>@count</td>
                <td>@item.Phone </td>
                <td>@item.Email</td>
                <td>
                    <a href="/Contact/Update/@item.ContactId" class="btn btn-outline-info">Güncelle</a>
                </td>
            </tr>

        }

</tbody>


</table>

