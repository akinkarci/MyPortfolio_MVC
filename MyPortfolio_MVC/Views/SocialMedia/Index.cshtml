﻿@model List<MyPortfolio_MVC.Models.TblSocialMedia>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<h2>Social Media</h2>

<table class="table table-bordered table-hover">

    <tr>
        <th></th>
        <th>Social Media Name</th>
        <th>Url</th>
        <th></th>
        

    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count </td>
            <td>@item.Name </td>
            <td> @item.Url</td>
            <td> <a href="/SocialMedia/Delete/@item.SocialMediaId" class="btn btn-outline-danger">Sil</a> </td>
            <td> <a href="/SocialMedia/Update/@item.SocialMediaId" class="btn btn-outline-warning">Güncelle</a> </td>

        </tr>

    }


</table>

<br />
<a href="/SocialMedia/Create" class="btn btn-outline-success">Social Media Ekle</a>