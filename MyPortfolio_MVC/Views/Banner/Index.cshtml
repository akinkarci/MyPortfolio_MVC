﻿@model List<MyPortfolio_MVC.Models.TblBanner>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<h2>Banner</h2>


<table class="table table-bordered table-hover">
    <tr>
        <th></th>
        <th>Title</th>
        <th>Description</th>
        
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count </td>
            <td>@item.Title</td>
            <td>@item.Description </td>
          
            <td>
                <a href="/Banner/Show/@item.BannerId" class="btn btn-outline-warning">Bunu Göster</a>
                <a href="/Banner/Delete/@item.BannerId" class="btn btn-outline-danger">Sil</a>
            </td>
        </tr>
    }
</table>

<br />
<a href="/Banner/Create" class="btn btn-outline-success">Banner Ekle</a>